<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_shop_goods_bottom"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_shop_goods_buy_car_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/iv_buy_car_goods_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:background="@drawable/tab_icon_shopping_car"/>

            <TextView
                android:id="@+id/tv_buy_car_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/shape_oval_size_20_red"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_10" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_buy_car_goods_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0"
                android:textColor="#FF1133"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/tv_buy_car_goods_send_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="另需配送费￥0"
                android:textColor="#d1d1d1"
                android:textSize="@dimen/font_size_10" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_buy_car_settle"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="结算"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16" />
</FrameLayout>