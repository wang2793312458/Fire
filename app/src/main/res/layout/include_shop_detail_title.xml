<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_shop_detail_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0"
    android:background="@color/white"
    android:paddingTop="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/iv_finish_back"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:scaleType="centerInside"
            android:src="@mipmap/nav_icon_back_default"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/tv_shop_detail_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ll_collection_share"
            android:layout_toRightOf="@+id/iv_finish_back"
            android:gravity="center"
            android:textColor="@color/black1"
            android:textSize="@dimen/font_size_18" />

        <LinearLayout
            android:id="@+id/ll_collection_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_shop_detail_collection2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nav_icon_collect_default" />

            <ImageView
                android:id="@+id/iv_shop_detail_share2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="6dp"
                android:src="@mipmap/nav_icon_share_default" />
        </LinearLayout>
    </RelativeLayout>

    <View
        style="@style/line_horizontal"
        android:layout_marginTop="50dp" />
</FrameLayout>